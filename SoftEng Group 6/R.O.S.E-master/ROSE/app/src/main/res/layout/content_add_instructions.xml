<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dc4b88">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Recipe Instruction:"
        android:id="@+id/recipeInstruction"
        android:textStyle="bold"
        android:textColor="#ede2e2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/recipeInstructionText"
        android:background="#ccdd6b9b" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Instruction"
        android:id="@+id/addInstruction"
        android:onClick="addInstruction" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear List"
        android:id="@+id/clearInstructionList"
        android:onClick="clearInstructionsList" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save List"
        android:id="@+id/saveInstructionsList"
        android:onClick="saveInstructionsList" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/ingredientsCancel"
        android:onClick="cancelInstructionsButton" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/recipeInstructionsListView"
        android:layout_margin="20dp"
        android:background="#ccdd6b9b" />
</LinearLayout>
