<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dc4b88">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Recipe Ingredient:"
        android:id="@+id/recipeIngredient"
        android:textColor="#ede2e2"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/recipeIngredientText"
        android:background="#ccdd6b9b" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Ingredient"
        android:id="@+id/addIngredient"
        android:onClick="addIngredient" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear List"
        android:id="@+id/clearIngredientList"
        android:onClick="clearIngredientsList" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save List"
        android:id="@+id/saveIngredientsList"
        android:onClick="saveIngredientsList" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/IngredientsCancel"
        android:onClick="cancelIngredientsButton" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/recipeIngredientsListView"
        android:background="#ccdd6b9b"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>
